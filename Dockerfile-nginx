FROM nginx:1.27.3-alpine

# Security: Create non-root user for nginx
RUN addgroup -g 1001 -S nginx-user \
    && adduser -u 1001 -D -S -G nginx-user nginx-user

# Copy the Nginx configuration file
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Security: Mount SSL certificates as secrets instead of copying
# COPY ssl /etc/nginx/certs/
RUN mkdir -p /etc/nginx/certs && chown -R nginx-user:nginx-user /etc/nginx/certs

# Security: Remove default nginx config and unnecessary packages
RUN rm -f /etc/nginx/conf.d/default.conf.default \
    && apk del --purge \
    && rm -rf /var/cache/apk/* /tmp/* /var/tmp/*

# Security: Change ownership of nginx directories
RUN chown -R nginx-user:nginx-user /var/cache/nginx /var/log/nginx /etc/nginx

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider https://localhost:443/ || exit 1

USER nginx-user

EXPOSE 443
